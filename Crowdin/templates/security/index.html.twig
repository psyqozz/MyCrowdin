{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="example-wrapper">
    <h1>Tu peux te connecter ! âœ…</h1>

    <div class="row">
        <div class="col-sm-5">
            <div class="well">
                <form action="{{ path('security_login') }}" method="post">
                    <fieldset>
                        <legend><i class="fa fa-lock" aria-hidden="true"></i> Connexion</legend>
                        <div class="form-group">
                            <label for="username">Utilisateur</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" id="password" name="_password" class="form-control" />
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                        {% if error %}
                        <p class="text-danger"> {{ error.messageKey|trans(error.messageData, 'security') }}</p>
                        {% endif %}

                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-sign-in fa-lg" aria-hidden="true"></i> On entre
                        </button>
                        
                    </fieldset>
                </form>
            </div>
        </div>

</div>
{% endblock %}
