{% extends 'base.html.twig' %}

{% block title %} Inscription {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<h1>Tu peux t'inscrire ! âœ…</h1>
    <div class="col-sm-5">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.username, {'attr': {'class': 'form-control form-control-sm'}}) }}
                {{ form_row(form.email, {'attr': {'class': 'form-control form-control-sm'}}) }}
                {{ form_row(form.plainPassword.first, {'attr': {'class': 'form-control form-control-sm'}}) }}
                {{ form_row(form.plainPassword.second, {'attr': {'class': 'form-control form-control-sm'}}) }}
            </div>
            <button type="submit" class="btn btn-primary"> S'inscrire</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
