{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container" style="margin-top:2em">
<div class="row">
    <div class="col-lg-3">
        <ul class="nav nav-pills flex-column">
        <li class="nav-item">
            <a class="nav-link active bg-dark" href="{{ path('user_config') }}">Profil</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('user_resetPassword') }}">Mot de Passe</a>
        </li>
        </ul>
    </div>
    <div class="col-lg-9">
        <div class="col-sm-10">
        <h1>Que veux tu modifier ? ðŸ–‹</h1>
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.email, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        {{ form_row(form.username, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        {{ form_row(form.description, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        {# {{ form_row(form.plainPassword, {'attr': {'class': 'form-control form-control-sm'}}) }} #}
                        {# {{ form_row(form.plainPassword.second, {'attr': {'class': 'form-control form-control-sm'}}) }} #}
                    </div>
            </div>
            <div class="col-sm-10">
                    <div class="form-group">
                        <label class="col-form-label" >Langues(s) :</label>                
                        <div class="row">
                        {% for lang in form.langages %}
                            <div class="col-md-4">
                                {{ form_row(lang) }}
                            </div>
                        {% endfor %}
                        </div>
                    </div>
                    <div class="row">
                    <div class="col-sm-9">
                        {{ form_row(form.plainPassword.first, {'attr': {'class': 'form-control form-control-sm'}}) }}
                        {{ form_row(form.plainPassword.second, {'attr': {'class': 'form-control form-control-sm'}}) }}
                    </div>
                    <div class="col-sm-3" style="margin: auto" align="right">
                        <button type="submit" class="btn btn-primary"> Valider</button>
                    </div>
                    </div>
                {{ form_end(form) }}
            </div>
    </div>
</div>
</div>
{% endblock %}
